{
  "permissions": {
    "allow": [
      "*",
      "Bash(cd:*)",
      "Bash(dir:*)",
      "Edit",
      "Bash(npm install)",
      "Bash(npm test:*)",
      "Bash(npm run test:coverage:*)",
      "Bash(git:*)",
      "Bash(del:*)",
      "Bash(npm run build)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "bypassPermissions"
  },
  "model": "opus",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/claudeception-activator.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File C:\\Users\\pang1fan\\.claude\\hooks\\context-warning.ps1"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "superpowers@superpowers-marketplace": true
  },
  "outputStyle": "Default",
  "language": "简体中文",
  "autoUpdatesChannel": "latest",
  "dangerouslySkipPermissions": true
}
